<h2>Payment List</h2>
<body id="billpayimage" style="background-image: url('../../Images/logo_bank.png' );
background-repeat: no-repeat; background-size: cover;  background-color: deepskyblue; margin:0">
</body>



<table class="table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Payee.PayeeName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Amount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ScheduleDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Period)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ModifyDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Account_Master_174797_Project.Balance)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Account_Master_174797_Project.Account_Type)
        </th>

        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Payee.PayeeName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Amount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ScheduleDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Period)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ModifyDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Account_Master_174797_Project.Balance)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Account_Master_174797_Project.Account_Type)
        </td>

        <td style="color:maroon">
            @Html.ActionLink("Edit", "Edit", new { id = item.BillPayID }) |
            @Html.ActionLink("Details", "Details", new { id = item.BillPayID }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.BillPayID })
        </td>
    </tr>
}

</table>
